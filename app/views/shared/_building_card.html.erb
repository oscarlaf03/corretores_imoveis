<div class="col-xs-12 col-sm-4 col-lg-6">
  <div class="card building-card" style= "background-image: url('<%= cl_image_path building.photos.first.image %>');">
    <a class="card-link" href="<%= building_path(building)  %>" >
      <div class="card-category"><%= building.unit_type  %></div>
      <div class="card-description">
        <h2><%= building.title  %></h2>
        <p><%= "#{building.description}".truncate(10) %></p>
      </div>
    </a>
  </div>
</div>
