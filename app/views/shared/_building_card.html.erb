<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <div class="card building-card" style="background-image: url('<%= first_image(building)%>');">
    <a class="card-link" href="<%= building_path(building) %>" >
      <div class="card-category"><%= building.unit_type  %></div>
      <div class="card-description">
        <h2><%= building.title  %></h2>
        <p><%= "#{building.description}".truncate(10) %></p>
      </div>
    </a>
  </div>
</div>
